{
  "name": "nodejs-frontend",
  "version": "1.0.0",
  "description": "A Node.js frontend project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/main.css -o public/css/style.css",
    "build:js": "browserify src/js/main.js -o public/js/bundle.js"
  },
  "keywords": [
    "nodejs",
    "frontend",
    "express",
    "web"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "browserify": "^17.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16"
  }
}